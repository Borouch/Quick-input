{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": ["**/*.ts"],
	"exclude": ["node_modules/*"],
	"types": ["node", "svelte", "jest"],
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES5", "ES6", "ES7"]
	}
}
